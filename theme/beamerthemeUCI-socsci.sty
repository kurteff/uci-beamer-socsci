% beamerthemeUCI-socsci.sty
\ProvidesPackage{beamerthemeUCI-socsci}[2025/08/20 Custom UCI Beamer Theme]

% ----------------------------------------------------
% Dependencies
% ----------------------------------------------------
\RequirePackage{xcolor}
\RequirePackage{graphicx}
\RequirePackage{helvet}

% ----------------------------------------------------
% Theme options
% ----------------------------------------------------
\newif\ifUCI@widescreen
\newif\ifUCI@standard

\DeclareOptionBeamer{widescreen}{
  \UCI@widescreentrue
  \UCI@standardfalse
}

\DeclareOptionBeamer{standard}{
  \UCI@standardtrue
  \UCI@widescreenfalse
}

% Default option
\UCI@widescreentrue
\UCI@standardfalse

\ProcessOptionsBeamer

% ----------------------------------------------------
% Locate theme assets
% ----------------------------------------------------
\makeatletter
\graphicspath{{\beamer@themelocation/backgrounds/}}
\makeatother

% ----------------------------------------------------
% Presentation mode
% ----------------------------------------------------
\mode<presentation>

% ----------------------------------------------------
% Background templates
% ----------------------------------------------------
\makeatletter

\ifUCI@widescreen
  \@ifclasswith{beamer}{aspectratio=169}{}{%
    \PackageError{beamerthemeUCI-socsci}
      {Use \string\documentclass[aspectratio=169]{beamer}}
      {}
  }
  \setbeamertemplate{background}{%
    \includegraphics[width=\paperwidth,height=\paperheight]{backgroundwidescreen.pdf}
  }
\fi

\ifUCI@standard
  \@ifclasswith{beamer}{aspectratio=43}{}{%
    \PackageError{beamerthemeUCI-socsci}
      {Use \string\documentclass[aspectratio=43]{beamer}}
      {}
  }
  \setbeamertemplate{background}{%
    \includegraphics[width=\paperwidth,height=\paperheight]{backgroundstandard.pdf}
  }
\fi

\makeatother

% ----------------------------------------------------
% Custom colors
% ----------------------------------------------------
\definecolor{uci-blue}{rgb}{0.145,0.341,0.6}
\definecolor{uci-gold}{rgb}{0.997,0.8,0.025}

\setbeamercolor{structure}{fg=uci-blue}
\setbeamercolor{title}{fg=uci-blue}
\setbeamercolor{subtitle}{fg=uci-blue!80!black}
\setbeamercolor{author}{fg=black}
\setbeamercolor{institute}{fg=black}
\setbeamercolor{date}{fg=black}

\setbeamercolor{block title}{fg=white,bg=uci-blue}
\setbeamercolor{block body}{fg=black,bg=uci-blue!10}

% ----------------------------------------------------
% Layout / templates
% ----------------------------------------------------
\setbeamertemplate{navigation symbols}{}
\setbeamertemplate{caption}[numbered]

\setbeamertemplate{headline}{\vspace{1.4cm}}

\AtBeginSection[]{
  \begin{frame}
    \frametitle{Outline}
    \tableofcontents[currentsection]
  \end{frame}
}

\setbeamertemplate{footline}{
  \leavevmode%
  \hbox{%
    \begin{beamercolorbox}[wd=.333333\paperwidth,ht=2.25ex,dp=1ex,center]{author in head/foot}%
      \insertshortauthor
    \end{beamercolorbox}%
    \begin{beamercolorbox}[wd=.333333\paperwidth,ht=2.25ex,dp=1ex,center]{title in head/foot}%
      \insertshortinstitute
    \end{beamercolorbox}%
    \begin{beamercolorbox}[wd=.333333\paperwidth,ht=2.25ex,dp=1ex,right]{date in head/foot}%
      \insertshortdate{}\hspace*{2em}
      \insertframenumber{} / \inserttotalframenumber\hspace*{2ex}
    \end{beamercolorbox}%
  }%
}

\mode<all>
